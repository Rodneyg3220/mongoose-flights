<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Rating By Year: </div>
  <div><%= flight.ratingByYear %></div>
  <div>Rating: </div>
  <div><%= flight.airlineRating %></div>
  <div>Airport: </div>
  <div><%= flight.airportName.join(', ') %></div>
  <div>Now Showing: </div>
  <div><%= flight.flownThisAirlineBefore ? 'Yes' : 'Nope' %></div>
</section>
</section>
<!-- new markup below -->
<br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/movies/<%= movie._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="A">A</option>
    <option value="B">B</option>
    <option value="C">C</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Add Review">
</form>



<% if (flight.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% movie.reviews.forEach(function(r) { %>
        <tr>
          <!-- .toLocaleDateString() provides a more friendly date format -->
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %> 
 
  
<%- include('../partials/footer') %>
