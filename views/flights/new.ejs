<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
<label>Airline:
<select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="Delta">Delta</option>
    <option value="United">United</option>
    <option value="Frontier">Frontier</option>
</select>
><br>
  <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="KCI">KCI</option>
    </select>
  </label>
  <br>
  <label>Flight No</label>
  <input type="number" name="flightNo" min="10" max="9999">
  <br>
  <label>Flight Reason</label>
  <select name="flightReason">
    <option value="Business">Business</option>
    <option value="Personal">Personal</option>
  </select>
  <br>
  <label>Departs:</label>
    <input type="datetime-local" name="departs">
    <label>:</label>
  <br>
  <label>Arrival:</label>
  <input type="datetime-local" name="arrival">
  <label>:</label>
  <br>
  <label>Flown Before?:</label>
  <input type="checkbox" name="flownBefore" checked>
  <br>
  <input type="submit" value="Add Flight">
</form>

</html>

<%- include('../partials/footer') %>