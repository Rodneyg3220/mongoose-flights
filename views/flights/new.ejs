

<form id="new-form" action="/flights" method="POST">
  <label>Airport:</label>
  <input type="text" name="airport">
  <label>Airline:</label>
  <input type="text" name="airline">
  <label>Flight No.</label>
  <label>Flight Reason</label>
  <select name="flightReason">
    <option value="Business">Business</option>
    <option value="Personal">Personal</option>
  </select>
  
  <label>Departs</label>
  <input type="date" name="departs">
  <label>Flown Before?:</label>
  <input type="checkbox" name="flownBefore" checked>
  <input type="submit" value="Add Flight">
</form>

